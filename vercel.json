{
    "version": 2,
    "builds": [
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/login",
            "dest": "/public/login.html"
        },
        {
            "src": "/painel",
            "dest": "/public/painel.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}